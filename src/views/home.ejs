
<h1 class="mb-3">Danh sách Source Code</h1>
<div class="row g-4">
  <% codes.forEach(c => { %>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <% if (c.imageUrl) { %>
          <img src="<%= c.imageUrl %>" class="card-img-top" style="object-fit:cover;height:200px" />
        <% } %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= c.title %></h5>
          <p class="card-text text-truncate"><%= c.description || '' %></p>
          <p class="fw-bold mt-auto">Giá: <%= money(c.priceVND) %> ₫</p>
          <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/code/<%= c._id %>">Xem</a>
            <a class="btn btn-primary" href="/order/new/<%= c._id %>">Mua ngay</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
